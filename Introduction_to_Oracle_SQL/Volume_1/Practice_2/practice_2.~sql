select * from employees

-- Crear una query donde seleccione el apellido y que el salario sea superios a $12000


select last_name, salary from employees where salary > 12000


-- Ver el apellido y salario del empleado con el id 15

select last_name apellido , salary salario from employees where employee_id = 15


-- Que esten el rango de 100 a 12000

select last_name, salary from employees where salary between 100 and 12000

-- Orden Ascendente

select last_name, salary from employees where salary between 100 and 12000 order by employee_id ASC

-- Solo desplegar la información del Apellido Perez1 y Perez2

select * from employees where last_name in ('Perez1', 'Perez2')

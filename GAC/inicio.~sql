CREATE SEQUENCE SEC_GAC
START WITH 1
INCREMENT BY 1;

CREATE TABLE GAC (
    GAC_ID NUMBER DEFAULT SEC_GAC.NEXTVAL PRIMARY KEY,
    QUANTITY NUMBER,
    DESCRIPTION VARCHAR2(100),
    DATE DATE DEFAULT TRUNC(SYSDATE), -- Esto establece la hora en 00:00:00
    TIME DATE DEFAULT SYSDATE, -- Esto establece la fecha y hora actual y luego extraemos solo la hora
);

-- Insertar Datos

INSERT INTO GAC (
    QUANTITY,
    DESCRIPTION
) VALUES (
    1,
    'GAC 1'
);

SELECT
    TO_CHAR(SYSDATE, 'HH24:MI:SS')
FROM
    DUAL;

SELECT
    TO_DATE(TO_CHAR(SYSDATE, 'HH24:MI:SS'), 'HH24:MI:SS')
FROM
    DUAL;

SELECT
    TO_TIMESTAMP(TO_CHAR(SYSDATE, 'HH24:MI:SS'), 'HH24:MI:SS')
FROM
    DUAL;

SELECT
    TO_TIMESTAMP(TO_CHAR(SYSDATE, 'HH24:MI:SS'), 'HH24:MI:SS')
FROM
    DUAL;

SELECT
    SYSTIMESTAMP
FROM
    DUAL
 -- modificar la tabla del valor TIME_CREATION


    ALTER TABLE GAC MODIFY TIME_CREATION INTERVAL DAY TO SECOND DEFAULT NUMTODSINTERVAL(EXTRACT(HOUR FROM CURRENT_TIMESTAMP),
    'HOUR') + NUMTODSINTERVAL(EXTRACT(MINUTE FROM CURRENT_TIMESTAMP),
    'MINUTE') + NUMTODSINTERVAL(EXTRACT(SECOND FROM CURRENT_TIMESTAMP),
    'SECOND');

-- eliminar la tabla DELETE

DROP TABLE GAC;
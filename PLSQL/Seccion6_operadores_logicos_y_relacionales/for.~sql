-- Muy similar a los distintos lenguajes de programación. Al final debe llevar la palabra loop

-- Ejemplo de un ciclo infinito
BEGIN
    FOR I IN 1..5 LOOP 
        DBMS_OUTPUT.PUT_LINE('Hola mundo '
                             || I);
    END LOOP;
END;

BEGIN
    FOR I IN reverse 1..5 LOOP 
        DBMS_OUTPUT.PUT_LINE('Hola mundo '
                             || I);
             
    END LOOP;
END;

BEGIN
    FOR I IN reverse 1..5 LOOP 
        DBMS_OUTPUT.PUT_LINE('Hola mundo '
                             || I);
          exit when I = 3;
    END LOOP;
END;
